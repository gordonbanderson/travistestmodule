{
    "name": "suilven/travistest",
    "type": "silverstripe-vendormodule",
    "description": "Testing SS4 with Travis",
    "keywords": [
        "suilven",
        "travistest"
    ],
    "homepage": "https://github.com/suilven/travistest",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon Anderson",
            "email": "gordon.b.anderson@gmail.com",
            "homepage": "https://github.com/gordonbanderson",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "silverstripe/cms": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Suilven\\TravisTest\\": "src/",
            "Suilven\\TravisTest\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
